@using Excel.Entities
@model Excel.Web.Models.DashboardModel

@{
    ViewBag.Title = "My Dashboard";
}

<h2>My Upcoming Sessions</h2>

<table>
    <thead>
        <tr>
            <th>Hour</th>
            <th>Date</th>
            <th>Location</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody id="upcomingSessions">
        @foreach (var s in Model.MySessions)
        {
            <tr>
                <td>@s.Hour</td>
                <td>@s.Day.Date.ToLongDateString()</td>
                <td>@s.Location.Name</td>
                <td>@Html.ActionLink("Remove", "RemoveSession",
                    new { sessionId = s.Id },
                    new AjaxOptions { UpdateTargetId = "upcomingSessions" })</td>
            </tr>
        }
    </tbody>
</table>