@model Excel.Web.Models.TrialAthleteViewModel
@{
    ViewBag.Title = "Trial";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Trial", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDate, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BirthDate, new {@class = "form-control"})
        </div>
    </div>
    <p>@ViewBag.AgeBlurb</p>

    <div class="form-group">
        @Html.LabelFor(m => m.CellPhone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CellPhoneCarrierId, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CellPhoneCarrierId, ViewBag.CellPhoneCarriers as IEnumerable<SelectListItem>)
            @Html.ValidationMessageFor(model => model.CellPhoneCarrierId, "", new {@class = "text-danger"})
        </div>
    </div>

    <h5>Please enter date and time you would like to schedule your FREE Trial session</h5>

    <div class="form-group">
        @Html.LabelFor(model => model.SessionDateTime, new { @class = "control-label col-md-3" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.SessionDateTime, new {@class = "form-control" })
            @Html.ValidationMessageFor(model => model.SessionDateTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ScheduleId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ScheduleId, ViewBag.Schedule as IEnumerable<SelectListItem>)
            @Html.ValidationMessageFor(model => model.ScheduleId, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(model => model.LocationId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.LocationId, ViewBag.Locations as IEnumerable<SelectListItem>)
            @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HearAboutUsId, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.HearAboutUsId, ViewBag.HearAboutUs as IEnumerable<SelectListItem>)
            @Html.ValidationMessageFor(model => model.HearAboutUsId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
